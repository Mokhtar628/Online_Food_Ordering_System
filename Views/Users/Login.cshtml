@model Online_Food_Ordering_System.Models.User
@{
    ViewBag.Title = "Login";
}
<link rel="stylesheet" type="text/css" href="~/Content/LoginAndSignup/LoginAndSignupStyles.css">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal form-div">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label>Email</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Password</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Login" class="btn btn-default form-control" />
        </div>
    </div>

    <div style="color:red">@Html.ValidationMessage("LoginError")</div>
</div>
}