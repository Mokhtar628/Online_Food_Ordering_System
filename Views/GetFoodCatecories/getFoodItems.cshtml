
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowFoodInCategory</title>
    <link href="~/Content/showFoodStyle/ShowFoodInCategory.css" rel="stylesheet" />
    <script src="~/Content/showFoodStyle/JavaScript.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="well well-sm">
            <strong>Display</strong>
            <div class="btn-group">
                <a href="#" id="list" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-th-list">
                    </span>List
                </a> <a href="#" id="grid" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-th"></span>Grid
                </a>
                <a href="/GetFoodCatecories/getFoodCategories" class="btn btn-default btn-sm">
                    back
                </a>
            </div>            
                        
        </div>
        <div id="products" class="row list-group">
            @foreach (var item in ViewBag.foodItem)
            {
            <div class="item  col-xs-4 col-lg-4">
                <div class="thumbnail">
                    <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />
                    <div class="caption">
                        <h4 class="group inner list-group-item-heading">
                            @item.name
                        </h4>
                        <p class="group inner list-group-item-text">
                            preparing time: @item.preparing_time
                            <br />
                            available items: @item.available
                            <br />
                            description: @item.description
                        </p>
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <p class="lead">
                                    Price @item.price$
                                </p>
                            </div>

                            <div class="col-xs-12 col-md-6">
                                @using (Html.BeginForm("calladdtocart", "GetFoodCatecories"))
                                {
                                    @Html.AntiForgeryToken()

                                    <input type="number" name="quantity" value="1" min="1" max="10" style="margin-left:87px;" />
                                    <input type="hidden" name="id" value="@item.food_id" />
                        
                                    <input type="submit" value="add" class="form-control" style="margin-left:1px;margin-top:7px;color: #fff;background-color: #5cb85c;border-color: #4cae4c;" />

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
            @Html.ActionLink("View Cart", "ShowCart", "Cart")
        </div>
    </div>

</body>
</html>